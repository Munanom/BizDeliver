<h2>Pending Jobs</h2>
<table class="table mt-4">
    <thead>
        <tr>
            <th>Contact Name</th>
            <th>Location</th>
            <th>Contact Info</th>
            <th>Job Description</th>
            <th>Assigned To</th>
            <th>Status</th>
            
        </tr>
    </thead>
    <tbody>
        <% deliveryJobs.forEach((job, index) => { %>
            <% if (job.status === 'pending') { %>
                <tr>
                    <td><%= job.contactName %></td>
                    <td><%= job.location %></td>
                    <td><%= job.contactInfo %></td>
                    <td><%= job.jobDescription %></td>
                    <td><%= job.assignedTo %></td>
                    <td><%= job.status %></td>
                    <td>
                        <!-- Actions can be added here if needed, but no delete button as per requirement -->
                    </td>
                </tr>
            <% } %>
        <% }) %>
    </tbody>
</table>
<a href="/manager" class="btn btn-secondary mt-3">Back to Dashboard</a>