<h2>All Jobs</h2>
<table class="table mt-4">
    <thead>
        <tr>
            <th>Contact Name</th>
            <th>Location</th>
            <th>Contact Info</th>
            <th>Job Description</th>
            <th>Assigned To</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% deliveryJobs.forEach((job, index) => { %>
            <tr>
                <td><%= job.contactName %></td>
                <td><%= job.location %></td>
                <td><%= job.contactInfo %></td>
                <td><%= job.jobDescription %></td>
                <td><%= job.assignedTo %></td>
                <td><%= job.status %></td>
                <td>
                    <form action="/delete-job" method="post" class="d-inline">
                        <input type="hidden" name="index" value="<%= index %>">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>
<a href="/manager" class="btn btn-secondary mt-3">Back to Dashboard</a>
